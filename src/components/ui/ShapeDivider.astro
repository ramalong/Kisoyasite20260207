---
interface Props {
  position?: "top" | "bottom";
  color?: string;
  height?: string;
  flip?: boolean;
}

const {
  position = "bottom",
  color = "#ffffff",
  height = "120px",
  flip = false,
} = Astro.props;

const style = {
  fill: color,
  height: height,
  transform: flip ? "rotate(180deg)" : "none",
};

// Simple wave shape
const path =
  "M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z";

// Alternative wave if inverted (optional logic, but rotation works for top/bottom usually)
---

<div
  class={`shape-divider ${position}`}
  style={`height:${height}; pointer-events:none; overflow:hidden;`}
>
  <svg
    data-name="Layer 1"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 1200 120"
    preserveAspectRatio="none"
    style={style}
  >
    <path d={path} class="shape-fill"></path>
  </svg>
</div>

<style>
  .shape-divider {
    position: absolute;
    left: 0;
    width: 100%;
    line-height: 0;
    direction: ltr;
    z-index: 1; /* Above background but below content if handled correctly */
  }

  .shape-divider.top {
    top: 0;
  }

  .shape-divider.bottom {
    bottom: 0;
  }

  svg {
    display: block;
    width: calc(100% + 1.3px);
    position: relative;
    left: 50%;
    transform: translateX(-50%);
  }

  /* If position is top, we need to handle rotation in CSS or SVG transform. 
     The inline style above handles it, but let's ensure class dominance if needed. */
  .shape-divider.top svg {
    transform: translateX(-50%) rotate(180deg);
  }
</style>
