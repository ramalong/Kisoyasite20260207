<div class="fluid-background">
  <div class="blob blob-1"></div>
  <div class="blob blob-2"></div>
  <div class="blob blob-3"></div>
  <div class="blob blob-4"></div>
</div>

<script>
  import { gsap } from "gsap";

  const blobs = document.querySelectorAll(".blob");

  blobs.forEach((blob) => {
    // Randomize initial position
    gsap.set(blob, {
      x: () => Math.random() * window.innerWidth,
      y: () => Math.random() * window.innerHeight,
      scale: () => Math.random() * 0.5 + 0.8,
    });

    // Animate indefinitely
    gsap.to(blob, {
      duration: () => Math.random() * 10 + 20, // 20-30s duration
      x: () => Math.random() * window.innerWidth,
      y: () => Math.random() * window.innerHeight,
      rotation: () => Math.random() * 360,
      scale: () => Math.random() * 0.5 + 0.8,
      ease: "sine.inOut",
      repeat: -1,
      yoyo: true,
      modifiers: {
        x: gsap.utils.unitize((x) => parseFloat(x) % window.innerWidth), // Keep within width loosely
        y: gsap.utils.unitize((y) => parseFloat(y) % window.innerHeight),
      },
    });
  });
</script>

<style>
  .fluid-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1; /* Behind everything */
    overflow: hidden;
    background: var(--bg); /* Fallback or base color */
    pointer-events: none;
  }

  .blob {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px); /* Heavy blur for "fluid" look */
    opacity: 0.6;
  }

  .blob-1 {
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, var(--accent) 0%, transparent 70%);
    top: -100px;
    left: -100px;
  }

  .blob-2 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, var(--sub) 0%, transparent 70%);
    top: 50%;
    right: -100px;
  }

  .blob-3 {
    width: 400px;
    height: 400px;
    background: radial-gradient(
      circle,
      #e0f2f1 0%,
      transparent 70%
    ); /* Light Mintish */
    bottom: -100px;
    left: 20%;
  }

  .blob-4 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, var(--line) 0%, transparent 70%);
    top: 20%;
    right: 20%;
  }
</style>
